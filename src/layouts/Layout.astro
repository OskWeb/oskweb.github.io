---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import SocialMediaBox from '../components/SocialMediaBox.astro'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Header/>
		<main>
			<slot />
		</main>
		<SocialMediaBox />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		position: relative;
	}
	main {
		margin: 140px 250px 0px 250px;
		
	}

	body.light-theme .socialMediaBox ul li a {
    	color: black;
	}


	@media (max-width: 1160px) {
		main {
			margin: 140px 50px 0px 50px;
		}
    }

</style>
